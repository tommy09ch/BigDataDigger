<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamkitKAT.bigdatadigger"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.teamkitKAT.bigdatadigger.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamkitKAT.bigdatadigger.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.teamkitKAT.bigdatadigger.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.teamkitKAT.bigdatadigger.ResultActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.teamkitKAT.bigdatadigger.AdvanceSearchActivity"
            android:label="@string/title_activity_advance_search" >
        </activity>
        <activity
            android:name="com.teamkitKAT.bigdatadigger.DisplayInfoActivity"
            android:label="@string/title_activity_display_info" >
        </activity>
        <activity
            android:name="com.teamkitKAT.bigdatadigger.DisplayActivity"
            android:label="@string/title_activity_temporary" >
        </activity>
    </application>

</manifest>